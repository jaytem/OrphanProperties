@using EPiServer.Shell.Navigation;

@using [client].Web.Features.OrphanProperties.Models

@model OrphanPropertiesReportModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Orphan Properties Report</title>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />

    <!-- Shell -->
    @ClientResources.RenderResources("ShellCore")
    @ClientResources.RenderResources("epi-cms-react.configuration.common", new[] { ClientResourceType.Style})
    @ClientResources.RenderResources("admin", new[]{ ClientResourceType.Style})

    <!-- Light Theme -->
    @ClientResources.RenderResources("ShellCoreLightTheme")

    <link href="~/App_Themes/Default/Styles/system.css" type="text/css" rel="stylesheet">
    <link href="~/App_Themes/Default/Styles/ToolButton.css" type="text/css" rel="stylesheet">

    <style>
        a.ex1:link, a.ex1:visited {
            color: cornflowerblue;
            text-decoration: none;
            display: inline-block;
        }

        a.ex1:hover, a.ex1:active {
            color: blue;
        }

        th, td {
            padding: 15px;
        }

        .center {
            text-align: center;
        }

        .center-small {
            text-align: center;
            width: 8%;
        }

        .left-medium {
            width: 28%;
        }

        tr {
            position: relative;
        }

        .rowlink::before {
            content: "";
            display: block;
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    @Html.CreatePlatformNavigationMenu()
    <div @Html.ApplyPlatformNavigation()>

        <div class="content-area-container">
            <div class="epi-uif-layout-container">
                <div class="epi-uif-workspace-container">
                    <div class="epi-uif-workspace">
                        <div class="epi-uif-grid mdc-layout-grid">
                            <h1>Orphan Properties Report</h1>

                            <div id="contentDetails">
                                @if (Model.PagesList?.Count() > 0)
                                {
                                    <h2>Pages</h2>
                                    <partial name="~/Features/OrphanProperties/Views/Partials/_table.cshtml" model="Model.PagesList" />
                                }

                                @if (Model.BlocksList?.Count() > 0)
                                {
                                    <h2>Blocks</h2>
                                    <partial name="~/Features/OrphanProperties/Views/Partials/_table.cshtml" model="Model.BlocksList" />
                                }

                                @if (Model.MediaList?.Count() > 0)
                                {
                                    <h2>Media</h2>
                                    <partial name="~/Features/OrphanProperties/Views/Partials/_table.cshtml" model="Model.MediaList" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
